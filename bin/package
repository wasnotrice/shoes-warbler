#!/usr/bin/env ruby
$LOAD_PATH.unshift(File.expand_path "../../lib", __FILE__)

require 'rubygems'
require 'yaml'
require 'warbler'
require 'warbler/traits/shoes'

module Shoes
  module Swt
    module Package
      class Jar
        def initialize
          @config = Warbler::Config.new
          @jar = Warbler::Jar.new
        end

        def config
          @jar.apply(@config)
        end

        def create
          jar_filename = "#{@config.jar_name}.#{@config.jar_extension}"
          @jar.create(@config)
        end
      end
    end
  end
end

jar = Shoes::Swt::Package::Jar.new
jar.config
jar.create

